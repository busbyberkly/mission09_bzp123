@{
}

@model IEnumerable<string>

    <div class="d-grid gap-2">
        <a asp-controller="Home" asp-action="Index" asp-route-bookGenre="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>
        @foreach (string g in Model)
        {
            <a asp-controller="Home" asp-action="Index" asp-route-bookGenre="@g" asp-route-pageNum="1"
               class="btn @(ViewBag.SelectedGenre == g ? "btn-primary" : "btn-outline-secondary")">@g</a>
            
        }
    </div>